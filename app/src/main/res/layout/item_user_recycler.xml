<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:layout_scrollFlags="scroll"
    card_view:layout_collapseMode="parallax"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/concentID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/actionsID"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            tools:ignore="NotSibling,RtlHardcoded,UnknownId">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="fill_vertical"
                android:maxLines="3"
                android:minHeight="125dp"
                android:text="djskdjksjd"
                android:textAlignment="center"
                android:textColor="@color/colorTextHint"
                android:textSize="18sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textViewContent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:ems="0"
                android:gravity="left|fill_vertical"
                android:text="disjdhskd"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/actionsID"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="bottom"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded">

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="@color/EditBaby"
                    android:text="@string/edit"
                    android:textSize="18sp"
                    tools:ignore="ButtonStyle,NestedWeights" />

                <Button
                    android:id="@+id/btnDel"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@color/DeleteBaby"
                    android:text="@string/delete"
                    android:textSize="18sp"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>